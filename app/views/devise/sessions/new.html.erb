<div class="center">
  <div class="form">

    <h2><%= t('devise.sessions.session') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "field" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "field" } %>
        <%= f.input :remember_me, label: t('devise.sessions.remember_me'), as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <div class="button-wrapper">
          <%= f.button :submit, t('devise.sessions.log_in'), class: "button" %>
        </div>
      </div>
    <% end %>

    <div class="actions-wide-2x">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
