<div class="center">
  <div class="form">

    <h2><%= t('devise.passwords.edit.change_your_password') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: t('devise.passwords.edit.new_password'),
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} #{t('devise.registrations.new.characters_minimum')}" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "field" } %>
        <%= f.input :password_confirmation,
                    label: t('devise.passwords.edit.confirm_your_new_password'),
                    required: true,
                    input_html: { autocomplete: "new-password", class: "field" } %>
      </div>

      <div class="form-actions">
        <div class="button-wrapper">
          <%= f.button :submit, t('devise.passwords.edit.change'), class: "button" %>
        </div>
      </div>
    <% end %>

    <div class="actions-wide-2x">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
