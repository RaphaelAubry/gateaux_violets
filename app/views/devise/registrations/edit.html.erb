<div class="center">
  <div class="form">


    <h2><%= t('devise.registrations.edit.my_account') %> <!-- <%= resource_name.to_s.humanize %> --> </h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p><%= t('devise.registrations.edit.confirmation_email') %><%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: t('devise.registrations.edit.password_instruction'),
                    required: false,
                    input_html: { autocomplete: "new-password", class: "field" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password", class: "field" } %>
        <%= f.input :current_password,
                    hint: t('devise.registrations.edit.current_password_instruction'),
                    required: true,
                    input_html: { autocomplete: "current-password", class: "field" } %>
        <%= f.input :avatar, as: :file %>
      </div>

      <div class="form-actions">
        <div class="button-wrapper">
          <%= f.button :submit, t('devise.registrations.edit.edit'), class: "button" %>
        </div>
      </div>
    <% end %>

    <h3><%= t('devise.registrations.edit.cancel_my_account') %></h3>

    <div class="actions-wide-2x">
      <div class="button-wrapper">
        <%= link_to t('devise.registrations.edit.cancel'), registration_path(resource_name), class: "action", data: { confirm: t('confirm') }, method: :delete, remote: true %>
      </div>
      <div class="button-wrapper">
        <%= link_to t('back'), :back, class: "action" %>
      </div>
    </div>

  </div>
</div>
