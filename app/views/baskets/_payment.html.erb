<%= simple_form_for((@basket), remote: true, authenticity_token: true) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= f.input :payment_type, collection: Basket::PAYMENT_TYPE, label: false, selected: Basket::PAYMENT_TYPE[0], input_html: { id: "paymentType", class: "field"} %>

  <div class="IBAN">
    <p>Bank details below</p>
    <%= "#{Basket::IBAN}" %>
    <p></p>
  </div>
  <div>
    <%= f.submit "Approve basket", class: "button" %>
    <p></p>
  </div>

<% end %>
