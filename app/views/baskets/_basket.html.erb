<%= simple_form_for((@basket), remote: true) do |f| %>
   <div class="button-wrapper">

      <% case @basket.status %>
        <% when "basket" %>
          <%= f.input :status, :input_html => { class: "noshow", value: Basket::STATUS[1] }, label: false %>
        <% when "delivery" %>
          <%= f.input :status, :input_html => { class: "noshow", value: Basket::STATUS[2] }, label: false %>
        <% when "payment" %>
          <%= f.input :status, :input_html => { class: "noshow", value: Basket::STATUS[0] }, label: false %>
      <% end %>

      <%= f.submit class: "button" %>

    </div>
<% end %>
