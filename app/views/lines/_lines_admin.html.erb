<h1 class="title">Livraisons</h1>

  <div class="horizontal tabl-head">
    <p class="tabl-date">Delivery Date</p>
    <p class="tabl-id">Number</p>
    <p class="tabl-email">Customer email</p>
    <p class="tabl-phone">Customer Phone</p>
    <p class="tabl-name">Cake</p>
    <p class="tabl-status">Basket</p>

  </div>

  <% @lines.each do |line| %>

      <% address = line.basket.user.addresses.last %>

      <div class="horizontal tabl-data">
        <p class="tabl-date"><%= TimeFr(line.delivery_date) %></p>
        <p class="tabl-id"><%= line.id %></p>
        <p class="tabl-email"><%= line.basket.user.email %></p>
        <p class="tabl-phone"><%= format(address.phone) %></p>
        <p class="tabl-name"><%= line.cake.name %></p>
        <p class="tabl-status" data-status="<%= line.basket.status %>"><%= line.basket.status %></p>

      </div>

<% end %>
