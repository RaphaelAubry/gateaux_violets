<div class="left">
  <div class="form">

    <h1><%= t('title.address') %></h1>
    <%= simple_form_for(@address) do |f| %>

      <%= f.input :surname, label: t('label.surname') %>
      <%= f.input :name, label: t('label.name') %>
      <%= f.input :phone, label: t('label.phone') %>
      <%= f.input :address, input_html: { id: "form-address" }, label: t('label.address') %>
      <%= f.input :addition_address, input_html: { id: "form-address2" }, label: t('label.additional_address') %>
      <%= f.input :zip_code, input_html: { id: "form-zip" }, label: t('label.zip_code') %>
      <%= f.input :city, input_html: { id: "form-city" }, label: t('label.city') %>

      <%= f.submit t('form.create'), class: "button" %>

    <% end %>

  </div>
</div>
