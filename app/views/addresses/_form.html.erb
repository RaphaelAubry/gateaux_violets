<div class="left">
  <div class="form">

    <h1><%= t('title.address') %></h1>
    <%= simple_form_for(@address) do |f| %>

      <%= f.input :surname %>
      <%= f.input :name %>
      <%= f.input :phone %>
      <%= f.input :address, input_html: { id: "form-address" } %>
      <%= f.input :addition_address, input_html: { id: "form-address2" } %>
      <%= f.input :zip_code, input_html: { id: "form-zip" } %>
      <%= f.input :city, input_html: { id: "form-city" } %>

      <%= f.submit t('form.validate'), class: "button" %>

    <% end %>

  </div>
</div>
