<div class="center">
  <div class="form">
    <%= simple_form_for(@cake) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :size %>
      <div class="button-wrapper">
        <%= f.submit class: "button" %>
      </div>
    <% end %>
      <div class="button-wrapper">
        <%= link_to "Back", :back, class: "button" %>
      </div>
  </div>
</div>
