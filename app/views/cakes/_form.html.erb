<div class="center">
  <div class="form">

    <h1><%= t('title.new_cake') %></h1>
    <%= simple_form_for(@cake) do |f| %>
      <%= f.input :name, :input_html => { class: "field" } %>
      <%= f.input :description, :input_html => { class: "field" } %>
      <%= f.input :price, :input_html => { class: "field" } %>
      <!-- active not shown for control purpose ------------------------------------------------------>
      <% f.input :active, as: :select, collection: [['Yes',true]], include_blank: false %>
      <!----------------------------------------------------------------------------------------------->
      <%= f.input :photo, as: :file %>
      <div class="button-wrapper">
        <%= f.submit t('form.create'), class: "button" %>
      </div>
    <% end %>
      <div class="button-wrapper">
        <%= link_to t('back'), :back, class: "action" %>
      </div>
  </div>
</div>
