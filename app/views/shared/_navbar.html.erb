<div class="navbar navbar-expand-sm navbar-dark navbar-violet">

    <div class="navbar-logo">
      <%= link_to "", class: "navbar-brand" do %>
        <div class="horizontal">
          <%= image_tag "logo.png" %>
          <h2>Gateau Violet</h2><p>by Nina</p>
        </div>
      <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <div class="push-right">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active w100">
            <%= link_to "CrÃ©ations", home_path, class: "nav-link" %>
          </li>

          <li class="nav-item active push-right" style="margin-right: 20px;">
            <% if user_signed_in? %>
              <% if current_user.admin? %>
                <%= link_to "Paniers", baskets_path, class: "nav-link" %>
              <% else %>
                <%= link_to "Mes commandes", baskets_path, class: "nav-link" %>
              <% end %>
            <% end %>
          </li>

          <li class="nav-item active basket-icon">
            <% if user_signed_in? && !current_user.admin? %>

              <% basket = Basket.where(user_id: current_user.id).last %>
              <% if !basket.nil?%>
                <%= link_to "", basket_path(basket), class: "nav-link fas fa-shopping-bag" %>
              <% end %>

            <% end %>
          </li>

          <% if !user_signed_in? %>
          <li class="nav-item active w100">
            <%= link_to "", "", class: "nav-link" %>
          </li>
          <li class="nav-item active w100">
              <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          </li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <% if current_user.avatar.attached? %>
                <%= cl_image_tag current_user.avatar.key, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                <%= link_to "Edit", edit_user_registration_path, class: "dropdown-item" %>
              </div>
            </li>
            <% end %>
        </ul>
      </div>

    </div>

</div>
